# Netlify configuration file

[build]
  publish = "."

[[redirects]]
  from = "/*"
  to = "/index.html"
  status = 404

# Make .html extension optional
[[headers]]
  for = "/*"
  [headers.values]
    X-Frame-Options = "DENY"
    X-XSS-Protection = "1; mode=block"
    X-Content-Type-Options = "nosniff"